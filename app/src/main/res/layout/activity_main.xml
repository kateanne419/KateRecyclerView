<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">
<!--    android:background="@drawable/background">-->

    <TextView
        android:visibility="invisible"
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Welcome!"
        android:fontFamily="@font/bold"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/nice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        android:text="Nice to see you again!"
        android:fontFamily="@font/light"
        android:textColor="@color/white"
        android:alpha="0.7"
        android:layout_marginLeft="44dp"/>


    <Button
        android:id="@+id/btn_posts"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="Posts"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nice"
        android:layout_margin="40dp"
        android:background="@drawable/button"
        android:textSize="20dp"
        android:fontFamily="@font/regular"
        />

    <Button
        android:id="@+id/btn_albums"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="Albums"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_posts"
        android:layout_margin="40dp"
        android:background="@drawable/button"
        android:textSize="20dp"
        android:fontFamily="@font/regular"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/light"
        android:textSize="16dp"
        android:textColor="@color/gray"
        android:text="Not a member?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="30dp"/>

    <TextView
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/member"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Register here."
        android:textSize="16dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/orange"
        android:fontFamily="@font/bold"/>




</androidx.constraintlayout.widget.ConstraintLayout>