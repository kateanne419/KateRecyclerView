<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.katerecyclerview.post.presentation.PostsMainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_posts_main" >
        <action
            android:id="@+id/action_mainFragment_to_postFragment"
            app:destination="@id/postFragment" />
        <action
            android:id="@+id/action_mainFragment_to_createPostFragment"
            app:destination="@id/createPostFragment" />
        <action
            android:id="@+id/action_mainFragment_to_updatePostFragment"
            app:destination="@id/updatePostFragment" />
    </fragment>
    <fragment
        android:id="@+id/postFragment"
        android:name="com.example.katerecyclerview.post.presentation.PostFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post" >
        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue="title" />
        <argument
            android:name="body"
            app:argType="string"
            android:defaultValue="body" />
    </fragment>
    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.example.katerecyclerview.post.presentation.CreatePostFragment"
        android:label="fragment_create_post"
        tools:layout="@layout/fragment_create_post" />
    <fragment
        android:id="@+id/updatePostFragment"
        android:name="com.example.katerecyclerview.post.presentation.UpdatePostFragment"
        android:label="fragment_update_post"
        tools:layout="@layout/fragment_update_post" >
        <argument
            android:name="body"
            app:argType="string"
            android:defaultValue="body" />
    </fragment>

</navigation>